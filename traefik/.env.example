# Domain configuration
DOMAIN=chat.example.com

# ACME/Let's Encrypt configuration
ACME_EMAIL=admin@example.com
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory
# Use staging for testing: https://acme-staging-v02.api.letsencrypt.org/directory

# Certificate resolver method
# Options: "manual" (requires manual TXT record creation) or "letsencrypt" (automatic with API)
CERT_RESOLVER=manual

# DNS Challenge Method
# Set to true for automatic DNS challenge (requires API credentials below)
# Set to false for manual DNS challenge (no API credentials needed)
ENABLE_DNS_CHALLENGE=false
ENABLE_MANUAL_DNS=true

# DNS Provider (only needed if ENABLE_DNS_CHALLENGE=true)
DNS_PROVIDER=cloudflare

# API Credentials (only needed if ENABLE_DNS_CHALLENGE=true)
# Leave empty if using manual DNS verification

# Cloudflare DNS API credentials
CF_API_EMAIL=your-cloudflare-email@example.com
CF_API_KEY=your-global-api-key
# Alternative: API Token (recommended)
# CF_DNS_API_TOKEN=your-dns-api-token

# Route53 (AWS)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# DigitalOcean
# DO_AUTH_TOKEN=your-digitalocean-token

# Google Cloud DNS
# GCE_PROJECT=your-project-id
# GCE_SERVICE_ACCOUNT_FILE=/etc/traefik/service-account.json

# Logging
LOG_LEVEL=INFO